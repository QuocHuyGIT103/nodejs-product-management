extends ../../layouts/default.pug
block main
    h2 Danh sách sản phẩm
    .card.mb-3
        .card-header Danh mục sản phẩm
            .card-body
                .row
                    .col-4
                        a(
                            class="btn btn-outline-success"
                            href=`${prefixAdmin}/products-category/create`
                        ) + Thêm sản phẩm

                table(
                    class = "table table-hovertable-sm"
                    checkbox-multi
                )
                    thead
                        tr
                            th 
                                input(type="checkbox", name="checkall")
                            th STT
                            th Hình ảnh
                            th Tiêu đề
                            th Position
                            th Trạng thái
                            th Hành động
                    tbody
                        each item, index in records
                            tr
                                td 
                                    input(
                                        type="checkbox"
                                        name="id"
                                        value=item.id
                                    )
                                td #{index + 1}
                                td Hinh anh
                                    //- img(src=item.thumbnail
                                    //- alt=item.title, width="100px", height="auto")
                                td #{item.title}
                                td
                                    input(
                                        type="number"
                                        value=item.position
                                        name="position"
                                        min="1"
                                        style="width: 70px"
                                    )
                                td
                                    if(item.status == 'active')
                                        a(class="badge badge-success"
                                            href="javascript:"
                                            data-status=item.status
                                            data-id = item.id
                                            button-change-status
                                        ) Hoạt động
                                    else
                                        a(class = "badge badge-danger"
                                            href="javascript:"
                                            data-status=item.status
                                            data-id = item.id
                                            button-change-status
                                        ) Dừng Hoạt động
                                td
                                    a(
                                        href=`${prefixAdmin}/products/detail/${item.id}`
                                        class ="btn btn-secondary btn-sm"
                                    ) Chi tiết
                                    a(
                                        href=`${prefixAdmin}/products/edit/${item.id}`
                                        class ="btn btn-warning btn-sm"
                                    ) Sửa
                                    button(
                                        class = "btn btn-danger btn-sm ml-1"
                                        data-id = item.id
                                        button-delete
                                    ) Xóa

    <script src="/admin/js/product.js"></script>






